// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id           String    @id @default(uuid())
  name         String
  headline     String
  prepTime     String
  image        String
  websiteURL   String
  energy       Int
  calories     Int
  carbohydrate Float
  protein      Float
  tags         Tag[]     @relation("RecipeTag")
  recipeTags   RecipeTag[]
}

model Tag {
  name         String    @id @default(uuid())
  recipes      Recipe[]  @relation("RecipeTag")
  recipesTag   RecipeTag[]  
}

model RecipeTag {
  recipeId String
  tagName  String

  recipe   Recipe @relation(fields: [recipeId], references: [id])
  tag      Tag    @relation(fields: [tagName], references: [name])

  @@id([recipeId, tagName])
}